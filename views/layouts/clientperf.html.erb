<html>
	<head>
		<title>clientperf <%= ": #{@page_title}" if @page_title %></title>
		<style type="text/css">
			body {margin:0; font-family: helvetica, arial, sans-serif; font-size: 14px;}
			
			#header {
				background-color: #dedede;
				border-bottom: 2px solid #bbb;
				padding: 5px 20px;
			}
			
			#header h1, #header h3 {
				color: #222;
				margin: 0;
				padding: 0;
			}
			
			#header h1 a {
				color: inherit;
				text-decoration: none;
			}
			
			#header h3 {
				margin-top: 0px;
				font-size: 14px;
			}
			
			#header h3 span {
			}
			
			#content {
				padding: 0 20px;
			}
			
			#content h2 {
				margin-top: 20px;
				border-bottom: 1px solid #d3d3d3;
			}
		</style>
	</head>
	<body>
		<div id="header">
			<h1><%= link_to "clientperf", :controller => 'clientperf', :action => 'index' %></h1>
			<%= "<h3><span>&raquo;</span>#{@uri.uri}</h3>" if @uri %>
			<div style="clear:both"></div>
		</div>
		<div id="content">
			<%= yield %>
		</div>
	</body>
</html>